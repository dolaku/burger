<div class="container m-5 mx-auto">
    <div class="row">
        <div class="col-12 text-center">
            <i class="fas fa-hamburger mb-3" id="burger-logo"></i>
            <h1 class="mb-5">Burger Muncher!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <label class="font-weight-bold" for="input-burger-name">Burger Name:</label>
            <input type="text" name="input-burger-name" id="input-burger-name">
            <button class="btn btn-add-new">Add</button>
        </div>
    </div>
</div>

<div class="burger-container d-flex flex-wrap justify-content-center align-items-center">
    {{!-- for each burger in burgers table --}}
    {{#each burgers}}
        
        {{!-- if devoured is 1 == yes --}}
        {{#if devoured}}
            <div class="burger-wrapper m-3 d-flex flex-column devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                <div class="d-flex">
                    <div class="text-id">{{id}}</div>
                    <div class="text-name">{{burger_name}}</div>
                </div>
                <h5 class="text-center">Yum! <i class="fas fa-grin-tongue"></i></h5>
            </div>
        {{else}}
        
        {{!-- if devoured is 0 == no --}}

            <div class="burger-wrapper m-3 d-flex flex-column" data-id="{{id}}" data-devoured="{{devoured}}">
                <div class="mb-3 d-flex">
                    <div class="text-id">{{id}}</div>
                    <div class="text-name">{{burger_name}}</div>
                </div>
                <button class="btn btn-eat-it mx-auto">Eat it!</button>
            </div>
        {{/if}}
        
    {{/each}}
</div>